/**
 * Helper para validar se a configuração foi feita
 */
function checkConfig() {
  if (CONFIG.IDS.SPREADSHEET === "ID_DA_SUA_PLANILHA_AQUI") {
    throw new Error("[GAIUS CRITICAL] Você não configurou o ID da planilha no arquivo Config.gs");
  }
  return true;
}
